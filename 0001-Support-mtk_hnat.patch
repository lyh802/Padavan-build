diff --git a/trunk/linux-4.4.x/arch/mips/boot/dts/ralink/mt7621-raeth-gmac2.dtsi b/trunk/linux-4.4.x/arch/mips/boot/dts/ralink/mt7621-raeth-gmac2.dtsi
